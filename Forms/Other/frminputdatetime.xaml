<helpers:WindowWithSize x:Class="Gbs.Forms.Other.FrmInputDateTime"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:local="clr-namespace:Gbs.Forms.Other"
                        xmlns:helpers="clr-namespace:Gbs.Helpers"
                        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                        xmlns:localizations="clr-namespace:Gbs.Resources.Localizations"
                        Style="{DynamicResource sWindow}" Title="{x:Static localizations:Translate.ВыборДатыВремени}"
                        SizeToContent="WidthAndHeight" ResizeMode="NoResize">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <StackPanel Margin="5" Orientation="Horizontal">
      <TextBlock Text="{x:Static localizations:Translate.Время_}" Margin="5,5,5,0" Height="22"
                 VerticalAlignment="Center"/>
      <xctk:TimePicker Width="115" Margin="5"/>
    </StackPanel>
    <Button Grid.Row="1" Content="{x:Static localizations:Translate.FrmSearchGoods_ДОБАВИТЬ}"
            Style="{DynamicResource btnOk}" Margin="5"/>
  </Grid>
</helpers:WindowWithSize>