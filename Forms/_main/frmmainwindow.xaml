                  Command="{Binding NewWaybill}"/>
        <MenuItem Name="MenuItem_documents_waybillsJournal"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналПоступлений}"
                  Command="{Binding JornalWaybill}"/>
        <Separator/>
        <MenuItem Name="MenuItem_documents_newInvenoty"
                  Header="{x:Static localizations:Translate.FrmMainWindow_НоваяИнвентаризация}"
                  Command="{Binding MenuInventoryDo}"/>
        <MenuItem Name="MenuItem_documents_inventoriesJournal"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналИнвентаризаций}"
                  Command="{Binding MenuInventoryJournal}"/>
        <Separator/>
        <MenuItem Name="MenuItem_documents_newWriteoff"
                  Header="{x:Static localizations:Translate.FrmMainWindow_НовоеСписание}"
                  Command="{Binding MenuWriteOffGoods}"/>
        <MenuItem Name="MenuItem_documents_writeoffsJournal"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналСписаний}"
                  Command="{Binding MenuWriteOffJournal}"/>
        <Separator/>
        <MenuItem Name="MenuItem_documents_sendToOtherPoint"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ОтправитьНаДругуюТочку}"
                  Command="{Binding MenuSendWaybill}"/>
        <MenuItem Name="MenuItem_documents_otherPointSendsJournal"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналОтправлений}"
                  Command="{Binding MenuSendWaybillJournal}"/>
        <Separator/>
        <MenuItem Name="MenuItem_documents_moveToOtherStorage"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ПереместитьНаДругойСклад}"
                  Command="{Binding MenuSendStorage}"/>
        <MenuItem Name="MenuItem_documents_storageMovesJournal"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналПеремещений}"
                  Command="{Binding MenuSendStorageJournal}"/>
        <Separator/>
        <MenuItem Name="MenuItem_documents_newOrder" Header="{x:Static localizations:Translate.НовыйЗаказРезерв}"
                  Command="{Binding SalesOrderCard}"/>
        <MenuItem Name="MenuItem_documents_clientOrdersJournal"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналЗаказовРезервов}"
                  Command="{Binding SalesOrder}"/>
        <Separator/>
        <MenuItem Name="MenuItem_documents_newProduction"
                  Header="{x:Static localizations:Translate.ProductionCardViewModel_SaveCommand_Производство_товара}"
                  Command="{Binding ProductionCard}"/>
        <MenuItem Name="MenuItem_documents_productionsJournal"
                  Header="{x:Static localizations:Translate.ЖурналПроизводства}" Command="{Binding ProductionList}"/>
        <MenuItem Name="MenuItem_documents_quickProduction"
                  Header="{x:Static localizations:Translate.БыстроеПроизводство}" Command="{Binding SpeedProduction}"/>
      </MenuItem>
      <MenuItem Name="MenuItem_contacts" Header="{x:Static localizations:Translate.FrmMainWindow_Контакты}">
        <MenuItem Name="ItemClientAdd" Header="{x:Static localizations:Translate.FrmMainWindow_Добавить}"
                  Command="{Binding NewClient}"/>
        <Separator/>
        <MenuItem Name="MenuItem_contacts_groups"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ГруппыКонтактов}"
                  Command="{Binding GroupsClient}"/>
        <MenuItem Name="MenuItem_contacts_list"
                  Header="{x:Static localizations:Translate.FrmMainWindow_СписокКонтактов}"
                  Command="{Binding CatalogClients}"/>
        <Separator/>
        <MenuItem Name="MenuItem_contacts_credits" Header="{x:Static localizations:Translate.FrmMainWindow_Должники}"
                  Command="{Binding Borrower}"/>
        <Separator Visibility="{Binding FindOrgByInnVisibility}"/>
        <MenuItem Header="{x:Static localizations:Translate.FrmMainWindow_ПоискКомпанииПоИНН}"
                  Visibility="{Binding FindOrgByInnVisibility}" Command="{Binding FindOrgByInn}"/>
      </MenuItem>
      <MenuItem Header="{x:Static localizations:Translate.FrmMainWindow_Сервис}"
                Visibility="{Binding ServiceMenuVisibility}">
        <MenuItem Header="{x:Static localizations:Translate.FrmMainWindow_ВыгрузитьАрхивВДомОфис}"
                  Visibility="{Binding CreateFileHomeVisibility}" Command="{Binding CreateFileHome}"/>
        <Separator Visibility="{Binding VisibilitySeparatorService}"/>
        <MenuItem Header="{x:Static localizations:Translate.FrmMainWindow_НаFTPСервер}"
                  Command="{Binding CreateFileCatalogFtp}" Visibility="{Binding CreateFileCatalogFtpVisibility}"/>
        <MenuItem Header="{x:Static localizations:Translate.FrmMainWindow_Локально}"
                  Command="{Binding CreateFileCatalogLocal}" Visibility="{Binding CreateFileCatalogLocalVisibility}"/>
      </MenuItem>
      <MenuItem Header="{x:Static localizations:Translate.PageVisualModelView_ЕГАИС}"
                Visibility="{Binding EgaisMenuVisibility}">
        <MenuItem Header="{x:Static localizations:Translate.ВходящиеНакладные}" Command="{Binding EgaisTtnList}"/>
        <Separator/>
        <MenuItem Header="{x:Static localizations:Translate.СформироватьАктСписанияАлкоголя}"
                  Command="{Binding EgaisWriteOff}"/>
        <MenuItem Header="{x:Static localizations:Translate.ЖурналАктовСписания}"
                  Command="{Binding EgaisWriteOffList}"/>
        <Separator Visibility="{Binding BlockMenuForHomeVisibility}"/>
        <MenuItem Header="{x:Static localizations:Translate.КонтрольКранов}"
                  Command="{Binding EgaisManagerForTapBeer}" Visibility="{Binding BlockMenuForHomeVisibility}"/>
        <MenuItem Header="{x:Static localizations:Translate.ЖурналВскрытияКегРазливноеПиво}"
                  Command="{Binding EgaisListOpenKegaBeer}" Visibility="{Binding BlockMenuForHomeVisibility}"/>
      </MenuItem>
      <MenuItem Name="MenuItem_help" Header="{x:Static localizations:Translate.FrmMainWindow_Справка}">
        <MenuItem Name="MenuItem_help_about" Header="{x:Static localizations:Translate.FrmMainWindow_ОПрограмме}"
                  Command="{Binding ProgramInfo}"/>
        <MenuItem Name="MenuItem_help_checkUpdate"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ПроверитьОбновление}"
                  Command="{Binding Path=CheckUpdateCommand}" Visibility="{Binding VisibilityCheckUpdate}"/>
        <MenuItem Name="MenuItem_help_licenseInfo"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ИнформацияОЛицензии}"
                  Command="{Binding LicenseInfo}"/>
        <Separator Visibility="{Binding Path=VkAndChangelogMenuItemsVisibility}"/>
        <MenuItem Name="MenuItem_help_changelog"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ЖурналИзменений}"
                  Visibility="{Binding Path=VkAndChangelogMenuItemsVisibility}" Command="{Binding ChangeLog}"/>
        <Separator/>
        <MenuItem Name="MenuItem_help_support" Header="{x:Static localizations:Translate.СлужбаПоддержки}"
                  Visibility="{Binding SupportLinkMenuItemVisibility}" Command="{Binding WriteSupport}"/>
        <MenuItem Name="MenuItem_help_onlineHelp"
                  Header="{x:Static localizations:Translate.FrmMainWindow_БазаЗнанийOnlineСправка}"
                  Visibility="{Binding KbLinkMenuItemVisibility}" Command="{Binding OnlineHelp}"/>
        <Separator/>
        <MenuItem Name="MenuItem_help_site" Header="{x:Static localizations:Translate.FrmMainWindow_ПосетитьНашСайт}"
                  Visibility="{Binding MainPageLinkMenuItemVisibility}" Command="{Binding Path=Site}"/>
        <MenuItem Name="MenuItem_help_vk" Header="{x:Static localizations:Translate.FrmMainWindow_МыВконтакте}"
                  Visibility="{Binding Path=VkAndChangelogMenuItemsVisibility}" Command="{Binding Vk}"/>
        <Separator Visibility="{Binding SendDataSupportMenuVisibility}"/>
        <MenuItem Header="{x:Static localizations:Translate.ОбращениеВТехническуюПоддержку}"
                  Visibility="{Binding SendDataSupportMenuVisibility}" Command="{Binding SendDataForSupport}"/>
      </MenuItem>
    </Menu>
    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <userControls:TextBoxWithClearControl x:Name="TxtSearch" HorizontalAlignment="Left" Margin="8 4 8 4" VerticalAlignment="Center"
                                            Width="250" TextFontSize="22" Height="40"
                                            IsEnabled="{Binding IsEnableSearchBox, UpdateSourceTrigger=PropertyChanged}"
                                            TextString="{Binding Path=SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
      <Button Name="ButtonSearch" HorizontalAlignment="Left" IsTabStop="false" VerticalAlignment="Center"
              Width="40" Height="40" Margin="0, 10" Style="{DynamicResource btnAction}"
              Command="{Binding Path=SelectGoodCommand}">
        <Image Source="{DynamicResource IconSearchInList}"/>
      </Button>
      <Button Name="ButtonFavorites" HorizontalAlignment="Left" VerticalAlignment="Center" Width="40"
              IsTabStop="false" Height="40" Style="{DynamicResource btnAction}" Margin="8, 10"
              Command="{Binding ShowSelectGood}">
        <Image Source="{DynamicResource IconFavorites}"/>
      </Button>
      <Button Name="ButtonGoToCafe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto"
              IsTabStop="false" Height="40" Style="{DynamicResource btnAction}" Margin="8,10,3,-3"
              Command="{Binding ShowCafeCommand}" Visibility="{Binding VisibilityButtonCafe}">
        <StackPanel Orientation="Horizontal">
          <Image Source="{DynamicResource IconCafeMode}"/>
          <TextBlock Text="{x:Static localizations:Translate.FrmMainWindow_ВернутьсяВКАФЕ}" Width="100"
                     TextWrapping="Wrap" FontSize="12" VerticalAlignment="Center"/>
        </StackPanel>
      </Button>
    </StackPanel>
    <StackPanel Orientation="Vertical" Margin="0,0,16,0" Grid.Row="1" Grid.RowSpan="1" HorizontalAlignment="Right"
                VerticalAlignment="Center">
      <TextBlock MouseUp="UIElement_OnMouseUp" Name="TextBlockTime" Opacity="0.7" VerticalAlignment="Top"
                 FontSize="40" HorizontalAlignment="Center" Margin="0 -40 0 0" Text="{Binding Path=Time}"/>
      <TextBlock Opacity="0.7" HorizontalAlignment="Center" TextAlignment="Center" FontSize="14"
                 VerticalAlignment="Top" Text="{Binding Path=Date}"/>
    </StackPanel>
    <Grid Row="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" MinHeight="260"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition x:Name="RowDefinitionSelectGoods" Height="Auto" MaxHeight="250"/>
      </Grid.RowDefinitions>
      <GroupBox Margin="8,0, 8, 0" Grid.Row="0">
        <HeaderedContentControl.Header>
          <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Margin="0 0 10 0 " IsTabStop="false" Style="{StaticResource btnLink}" Content="&lt;--"
                    Visibility="{Binding BasketSwitcherVisibility}" Command="{Binding PrevBasketCommand}"/>
            <Label Padding="3 0" Content="{x:Static localizations:Translate.FrmMainWindow_Корзина2}"/>
            <Label Padding="3 0" Visibility="{Binding BasketSwitcherVisibility}"
                   Content="{Binding CurrentBasketIndex}"/>
            <Label Padding="3 0" Content="/" Visibility="{Binding BasketSwitcherVisibility}"/>
            <Label Padding="3 0" Visibility="{Binding BasketSwitcherVisibility}" Content="{Binding TotalBaskets}"/>
            <Button Margin="10 0 0 0 " IsTabStop="false" Style="{StaticResource btnLink}" Content="--&gt;"
                    Visibility="{Binding BasketSwitcherVisibility}" Command="{Binding NextBasketCommand}"/>
          </StackPanel>
        </HeaderedContentControl.Header>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          <DataGrid ColumnHeaderDragCompleted="BasketGrid_OnColumnHeaderDragCompleted"
                    PreviewTouchDown="BasketGrid_OnPreviewTouchDown" x:Name="BasketGrid" Grid.Row="0" Grid.Column="0"
                    IsTabStop="false" Uid="" HorizontalScrollBarVisibility="Auto"
                    ItemsSource="{Binding Path=CurrentBasket.Items}"
                    SelectedItem="{Binding Path=CurrentBasket.SelectedItem}"
                    FontSize="{Binding FontSize, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <FrameworkElement.Resources>
              <ContextMenu x:Key="ContextMenuGrid"/>
              <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                <Setter Property="FrameworkElement.ContextMenu" Value="{StaticResource ContextMenuGrid}"/>
              </Style>
              <Style x:Key="DTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding IsSelected, ElementName=GridWaybillItems}" Value="True">
                    <Setter Property="TextBlock.Foreground" Value="White"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </FrameworkElement.Resources>
            <UIElement.InputBindings>
              <MouseBinding Gesture="LeftDoubleClick" Command="{Binding Path=CurrentBasket.EditQuantityCommand}"
                            CommandParameter="{Binding ElementName=BasketGrid, Path=SelectedItems}"/>
            </UIElement.InputBindings>
            <DataGrid.Columns>
              <DataGridTextColumn my:Extensions.Guid="1B164D06-652E-48F9-B865-1BAF3D88213C"
                                  Header="{x:Static localizations:Translate.FrmMainWindow_ШтрихКод}" Width="150"
                                  Binding="{Binding Path=Good.Barcode}"/>
              <DataGridTextColumn my:Extensions.Guid="9D6BC306-73DD-40B7-B62E-8271CDBE8DB7"
                                  Header="{x:Static localizations:Translate.FrmMainWindow_Категория}" Width="150"
                                  Binding="{Binding Path=Good.Group.Name}"/>
              <DataGridTemplateColumn Header="{x:Static localizations:Translate.FrmMainWindow_Наименование}"
                                      SortMemberPath="DisplayedName" Width="250"
                                      my:Extensions.Guid="8FB74BC2-9E00-4BC9-9C7D-A5598909E7BE">
                <DataGridColumn.CellStyle>
                  <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Setter Property="Control.Padding" Value="0"/>
                  </Style>
                </DataGridColumn.CellStyle>
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <Grid Width="Auto" Height="Auto" Margin="0 8 0 0" Cursor="{Binding CursorWithDisplayedName}">
                      <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>
                      <TextBlock Style="{StaticResource WrappedCell}" TextAlignment="Left" Margin="4 0 4 0"
                                 ToolTipService.InitialShowDelay="100" Text="{Binding DisplayedName}"
                                 ToolTipService.ToolTip="{Binding ErrorStrForDisplayedName, Mode=OneWay}"/>
                      <Border Margin="0 4 0 -1" Grid.Row="1" Height="4" Background="{Binding DisplayedNameColor}"/>
                    </Grid>
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
              <DataGridTemplateColumn Header="{x:Static localizations:Translate.FrmMainWindow_Цена}" SortMemberPath="SalePrice"
                                      Width="60" my:Extensions.Guid="3498244B-8B76-43B1-8FF8-248358385AB5">
                <DataGridColumn.CellStyle>
                  <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Setter Property="Control.Padding" Value="0"/>
                  </Style>
                </DataGridColumn.CellStyle>
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <Grid Width="Auto" Height="Auto" Margin="0 8 0 0" Cursor="{Binding CursorWithPrice}">
                      <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>
                      <TextBlock Style="{StaticResource DTextBlockStyle}" TextAlignment="Right" Margin="4 0 4 0"
                                 ToolTipService.InitialShowDelay="100" Text="{Binding SalePrice, StringFormat=N2}"
                                 ToolTipService.ToolTip="{Binding ErrorStrForPrice, Mode=OneWay}"/>
                      <Border Margin="0 4 0 -1" Grid.Row="1" Height="4" Background="{Binding PriceColor}"/>
                    </Grid>
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
              <DataGridTextColumn my:Extensions.Guid="848555C5-31BB-4253-A416-E13661D8A5E8"
                                  Header="{x:Static localizations:Translate.FrmMainWindow_КолВо}" Width="50"
                                  CellStyle="{DynamicResource numberCellStyle}"
                                  Binding="{Binding Path=Quantity, StringFormat='# ##0.###'}"/>
              <DataGridTextColumn my:Extensions.Guid="1F7990DC-635C-43AA-8A0A-4DA661052B7F"
                                  Header="{x:Static localizations:Translate.FrmMainWindow_Скидка}" Width="55"
