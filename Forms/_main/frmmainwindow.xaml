      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*" MinHeight="300"/>
      <RowDefinition Height="0"/>
      <RowDefinition Height="0"/>
      <RowDefinition Height="195" MinHeight="195" MaxHeight="195"/>
