        <MenuItem Name="MenuItem_goods_goodsGroupingEdit"
                  Header="{x:Static localizations:Translate.FrmMainWindow_ГрупповоеРедактированиеТоваров}"
                  Command="{Binding MenuGoodGroupEditing}"/>
