                  Visibility="{Binding MenuShowRemoteCatalogVisibility}" Command="{Binding MenuShowRemoteCatalog}"/>
      </MenuItem>
      <MenuItem Name="MenuItem_documents" Header="{x:Static localizations:Translate.FrmMainWindow_Документы}">
        <MenuItem Name="MenuItem_documents_newWaybill"
