        <MenuItem Name="MenuItem_goods_priceTags" Header="{x:Static localizations:Translate.FrmMainWindow_Ценники}"
                  Command="{Binding PriceTag}"/>
        <MenuItem Name="MenuItem_goods_lables" Header="{x:Static localizations:Translate.FrmMainWindow_Этикетки}"
                  Command="{Binding Lable}"/>
        <MenuItem Name="MenuItem_goods_packing" Header="{x:Static localizations:Translate.Фасовка}"
